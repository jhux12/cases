{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**",
      "server.js",
      "package.json",
      "package-lock.json"
    ],
    "rewrites": [
      {
        "source": "/api/spin",
        "function": "spin"
      },
      {
        "source": "/api/run-battle",
        "function": "runBattle"
      },
      {
        "source": "/api/open-vault",
        "function": "openVault"
      }
    ]
  }
}
