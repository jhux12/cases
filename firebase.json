{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**"
    ],
    "rewrites": [
      {
        "source": "/api/spin",
        "function": "spin"
      },
      {
        "source": "/api/run-battle",
        "function": "runBattle"
      }
    ]
  }
}
