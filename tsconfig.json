{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "rootDir": "src/scripts",
    "outDir": "scripts",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "isolatedModules": false,
    "sourceMap": false,
    "lib": ["DOM", "DOM.Iterable", "ES2020"]
  },
  "include": ["src/scripts/**/*"],
  "exclude": ["node_modules"]
}
